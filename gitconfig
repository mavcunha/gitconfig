# vim: ft=gitconfig
[user]
  name = Marco Valtas
  email = mavcunha@gmail.com
[color]
  ui = auto
[alias]
	aa = add --all
  b = branch
  ci = commit -v
  co = checkout
	clist = config --global --list
  di = diff
  dw = diff --word-diff
	dc = diff --cached
  ff = merge --ff-only
  l = log --graph --abbrev-commit --date=relative
  ll = log --graph --abbrev-commit --date=relative --name-status
  lp = log --graph --abbrev-commit --date=relative -p
	ls = ls-files
  lm = ls-files --modified
  pu = pull --ff-only
  pr = pull --rebase
  st = status -sb
  sub = submodule

  # top most changed files in a repo
  chfq = "!git log --name-status | grep -E '^M[[:blank:]]' | cut -d'	' -f 2  | sort | uniq -c | sort -rn | head -20"
[merge]
  tool = vimdiff
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[push]
	default = simple
[sendemail]
  smtpserver = smtp.gmail.com
  smtpserverport = 587
  smtpencryption = tls
  smtpuser = mavcunha@gmail.com

