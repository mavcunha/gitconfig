# vim: ft=gitconfig
[user]
  name = Marco Valtas
  email = mavcunha@gmail.com
[color]
  ui = auto
[core]
  whitespace = trailing-space,space-before-tab
  excludesfile = /opt/boxen/config/git/gitignore
[alias]
  aa = add --all .
  b = branch
  ci = commit -v -q
  co = checkout
  clist = config --global --list
  di = diff
  dw = diff --word-diff
  dc = diff --cached
  fe = fetch
  ff = merge --ff-only
  l  = log --graph --abbrev-commit --date=relative
  ll = log --graph --abbrev-commit --date=relative --name-status
  lp = log --graph --abbrev-commit --date=relative -p
  ls = ls-files
  lm = ls-files --modified
  pu = "!echo Use \"$(tput setaf 6)git fetch$(tput sgr0)\" instead "
  st = "!git white; git status -sb"
  sub = submodule
  # check for whitespace violations
  white = "!git diff --check; git diff --cached --check"
  # top most changed files in a repo
  chfq = "!git log --name-status | grep -E '^M[[:blank:]]' | cut -d' ' -f 2  | sort | uniq -c | sort -rn | head -20"
[merge]
  tool = vimdiff
  defaultToUpstream = true
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[push]
  default = simple
[sendemail]
  smtpserver = smtp.gmail.com
  smtpserverport = 587
  smtpencryption = tls
  smtpuser = mavcunha@gmail.com
[credential]
  helper = /opt/boxen/bin/boxen-git-credential
[hub]
  protocol = https
